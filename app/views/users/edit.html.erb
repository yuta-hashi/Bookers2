<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= render 'layouts/errors', user: @user %>
        <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br>
          <%= f.text_field :name, id:"user_name", class:"form-control name" %>
        </div>

        <div class="form-group">
          <label for="user_image">Image</label><br>
          <%= f.attachment_field :profile_image, id:"user_image", class:"form-control-file user_image" %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction, id:"user_introduction", class:"form-control introduction" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
        <% end %>
</main>