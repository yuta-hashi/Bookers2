<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= render 'layouts/book_errors' %>
        <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, id:"book_title", class:"form-control book_title" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, id:"book_opinion", class:"form-control book_body" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
        <% end %>

        <%= link_to "Show ", book_path(@book), class:"book_#{@book.id}" %>|<a class="back" href="/books"> Back</a>
      </div>
    </div>
  </div>
</main>